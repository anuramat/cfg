; imports
[include]
  path=user

[difftool "difftastic"]
  ; TODO how does this work?
  cmd = difft "$MERGED" "$LOCAL" "abcdef1" "100644" "$REMOTE" "abcdef2" "100644"

[diff]
  tool = difftastic
  external = difft --display inline

[diff "nodiff"]
  command="__nodiff() { echo skipping \"$1\"; }; __nodiff"

[difftool]
  ; show file 1/n?
  prompt = false

[pager]
  difftool = true

[core]
  pager = less -F

; ghq
; WARN: XDGBDSV
[ghq]
root = "~/.local/share/ghq"

[advice]
  detachedHead = false
  addEmptyPathspec = false

[push]
  autoSetupRemote = true

[merge "set"]
  name = Merge two files, treating them as sets of lines
  driver = "$XDG_CONFIG_HOME/git/merge_sets.sh" %A %O %B

[pull]
  ff = only

[alias]
  st = status
  ; TODO is this the only way
  sh = show --ext-diff
  ch = checkout
  br = branch
  sw = switch
  cm = commit
  ps = push
  lg = log --oneline --graph --all --decorate
  df = diff
  ds = diff --staged
  ; TODO check if this even works
  unpushed = log --branches --not --remotes --decorate --oneline
  ; TODO maybe remove this
  ignored = status --ignored

[init]
  defaultBranch = main

