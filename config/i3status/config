general {
  colors = true
  interval = 1
  output_format = "i3bar"
  colors = true
  color_good = "#50FA7B"
  color_degraded = "#F1FA8C"
  color_bad = "#FF5555"
}

order += "disk /"
order += "memory"
order += "cpu_usage"
order += "wireless wlp3s0"
order += "ethernet enp0s31f6"
order += "battery 0"
order += "battery 1"
order += "battery all"
order += "volume master"
order += "tztime local"

volume master {
  format = "â™ª %volume"
  format_muted = "â™ª %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

wireless wlp3s0 {
  format_up = "%essid%quality"
  format_down = "WLAN down"
}

ethernet enp0s31f6 {
  format_up = "LAN up"
  format_down = "LAN down"
}

