# change focus
meh - h : yabai -m window --focus west
meh - j : yabai -m window --focus south
meh - k : yabai -m window --focus north
meh - l : yabai -m window --focus east

# shift window in current workspace
meh + cmd - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
meh + cmd - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
meh + cmd - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
meh + cmd - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

# set insertion point in focused container
alt + ctrl - h : yabai -m window --insert west
alt + ctrl - j : yabai -m window --insert south
alt + ctrl - k : yabai -m window --insert north
alt + ctrl - l : yabai -m window --insert east

# go back to previous workspace (kind of like back_and_forth in i3)
meh - 6 : yabai -m space --focus recent

# move focused window to previous workspace
meh + cmd - b : yabai -m window --space recent; \
                  yabai -m space --focus recent

# move focused window to workspace
meh + cmd - 1 : yabai -m window --space 1
meh + cmd - 2 : yabai -m window --space 2
meh + cmd - 3 : yabai -m window --space 3
meh + cmd - 4 : yabai -m window --space 4
meh + cmd - 5 : yabai -m window --space 5
meh + cmd - 6 : yabai -m window --space 6
meh + cmd - 7 : yabai -m window --space 7
meh + cmd - 8 : yabai -m window --space 8
meh + cmd - 9 : yabai -m window --space 9
meh + cmd - 0 : yabai -m window --space 10

# mirror tree
meh + cmd - y : yabai -m space --mirror y-axis
meh + cmd - x : yabai -m space --mirror x-axis

# balance size of windows
meh + cmd - 0 : yabai -m space --balance

# change layout of desktop
meh - b : yabai -m space --layout bsp
meh - f : yabai -m space --layout float
meh - s : yabai -m space --layout stack

# cycle through stack windows
meh - p : yabai -m window --focus stack.next || yabai -m window --focus south
meh - n : yabai -m window --focus stack.prev || yabai -m window --focus north

