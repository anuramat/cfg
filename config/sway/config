# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Basic ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
set $term foot
# set $term kitty -1
set $bar_height 30
set $screenshot_dir "$HOME/Screenshots"
set $font Hack Nerd Font 13
font "pango:$font"
set $menu pkill tofi || j4-dmenu-desktop --dmenu="tofi -c $XDG_CONFIG_HOME/tofi.cfg" --wrapper='swaymsg exec' --no-generic --term='$term' --display-binary
focus_wrapping no
exec_always autotiling
exec swayidle -w timeout 300 'swaylock -f' before-sleep 'swaylock -f'
input 1:1:AT_Translated_Set_2_keyboard {
    xkb_options "ctrl:nocaps,altwin:swap_lalt_lwin,grp:alt_space_toggle"
    repeat_delay 250
    repeat_rate 50
    xkb_layout us,ru
}
input 2:10:TPPS/2_IBM_TrackPoint {
    pointer_accel 0.5
}
input 1739:0:Synaptics_TM3276-022 {
    events disabled
}
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Bindings ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
# Basic
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

bindsym $mod+t exec $term
bindsym $mod+space exec $menu
bindsym $mod+q kill

bindsym $mod+n exec "makoctl dismiss"
bindsym $mod+ctrl+n exec "makoctl dismiss --all"
bindsym $mod+ctrl+comma reload
bindsym $mod+comma exec $term $EDITOR $XDG_CONFIG_HOME/sway/config
bindsym $mod+ctrl+q exec swaylock --daemonize
floating_modifier $mod normal
# Focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# Move
bindsym $mod+ctrl+$left move left
bindsym $mod+ctrl+$down move down
bindsym $mod+ctrl+$up move up
bindsym $mod+ctrl+$right move right
# Brightness
bindsym XF86MonBrightnessDown exec light -U 25
bindsym XF86MonBrightnessUp exec light -A 25
# Volume
bindsym XF86AudioMicMute exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioPrev exec playerctl -p spotify previous
bindsym XF86AudioNext exec playerctl -p spotify next
bindsym XF86AudioStop exec playerctl -p spotify stop
bindsym XF86AudioPlay exec playerctl -p spotify play
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Workspaces ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $mod+ctrl+1 move container to workspace number 1
bindsym $mod+ctrl+2 move container to workspace number 2
bindsym $mod+ctrl+3 move container to workspace number 3
bindsym $mod+ctrl+4 move container to workspace number 4
bindsym $mod+ctrl+5 move container to workspace number 5
bindsym $mod+ctrl+6 move container to workspace number 6
bindsym $mod+ctrl+7 move container to workspace number 7
bindsym $mod+ctrl+8 move container to workspace number 8
bindsym $mod+ctrl+9 move container to workspace number 9
bindsym $mod+ctrl+0 move container to workspace number 10
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Layout ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
bindsym $mod+b splith
bindsym $mod+v splitv

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+f fullscreen

bindsym $mod+ctrl+m floating toggle
bindsym $mod+m focus mode_toggle
bindsym $mod+a focus parent

bindsym $mod+ctrl+minus move scratchpad
bindsym $mod+minus scratchpad show

mode "resize" {
    bindsym $left resize shrink width 50px
        bindsym $down resize grow height 50px
        bindsym $up resize shrink height 50px
        bindsym $right resize grow width 50px
        bindsym $mod+r mode "default"
        bindsym escape mode "default"
}
bindsym $mod+r mode "resize"
# ~~~~~~~~~~~~~~~~~~~~~~ Status bar ~~~~~~~~~~~~~~~~~~~~~~ #
bar {
    swaybar_command waybar
}
# ~~~~~~~~~~~~~~~~~~~~~~ Screenshot ~~~~~~~~~~~~~~~~~~~~~~ #
bindsym $mod+p exec grim -g "$(slurp)" - | swappy -f -
# ~~~~~~~ NixOS boilerplate from configuration.nix ~~~~~~~ #
exec dbus-sway-environment
exec configure-gtk
# ~~~~~~~~~~~~~~~~~~~~~~~ Visuals ~~~~~~~~~~~~~~~~~~~~~~~~ #
default_border pixel 3
default_floating_border normal 3
focus_follows_mouse no
# gaps inner 10
output * bg ~/wp.png fill
seat * hide_cursor when-typing enable
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ Displays ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #
output "Lenovo Group Limited LEN T27p-10 0x00007F36" {
    scale 1.5
    pos 0 0
}
output eDP-1 {
    pos 320 1440
}
# ~~~~~~~~~~~~~~~~~~~~~ Colorscheme ~~~~~~~~~~~~~~~~~~~~~~ #
#class                  border  bground text    indicator child_border
client.focused          #6272A4 #6272A4 #F8F8F2 #6272A4   #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36
client.background       #F8F8F2
