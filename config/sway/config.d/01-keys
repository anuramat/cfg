set {
    $bind bindsym --to-code
    $mod Mod4
    $mod2 ctrl
    $mod3 shift
    $mod4 alt

    $screenshot_key p
    $notification_key n

    $resize_key r
    $float_key m
    $scratchpad_key u
}
floating_modifier $mod normal
$bind {
    $mod+semicolon exec $term_start
    $mod+apostrophe exec $term_run nvim

    $mod+q kill
    $mod+$mod2+q exec $lock_screen
    $mod+space exec $menu

    $mod+o focus parent
    $mod+i focus child
    $mod+y sticky toggle

    $mod+a layout tabbed
    $mod+s layout stacking
    $mod+d layout toggle split
    # TODO figure those out
    $mod+w layout splith
    $mod+e layout splitv

    $mod+f fullscreen toggle
    $mod+$mod2+f fullscreen toggle global
    $mod+z split none
    $mod+x split horizontal
    $mod+v split vertical
    $mod+c split toggle
    # Gaps
    $mod+braceright gaps outer all plus 10
    $mod+braceleft gaps outer all minus 10
    $mod+bracketright gaps inner all plus 10
    $mod+bracketleft gaps inner all minus 10
    # Sway settings
    $mod+slash reload; exec notify-send "Sway reloaded" "Bottom text"
    # Notifications
    $mod+$notification_key exec $click_notificiation
    $mod+$mod2+$notification_key exec $dismiss_notification
    $mod+$mod3+$notification_key exec $dismiss_all_notifications
    # Screenshots
    $mod+$screenshot_key exec $screenshot_mouse
    $mod+$mod2+$screenshot_key exec $screenshot_focused_window
    $mod+$mod3+$screenshot_key exec $screenshot_focused_output
    $mod+$mod4+$screenshot_key exec $screenshot_all_outputs
}
# vim: ft=swayconfig
