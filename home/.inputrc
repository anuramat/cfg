$include /etc/inputrc
set bell-style visible
set blink-matching-paren on
# Invisible prompt divider (OSC-133;A)
set show-mode-in-prompt on
set emacs-mode-string "\1\e]133;A\e\\\2"
# ~~~~~~~~~~~~~~~~~~~~~~ Completion ~~~~~~~~~~~~~~~~~~~~~~ #
# highlight common prefix
set colored-completion-prefix on
# completion colors for file types
set colored-stats on
# number of columns in completion
set completion-display-width -1
# ignore case
set completion-ignore-case on
# '-' == '_'
set completion-map-case on
# max length in chars of a common prefix that doesn't get abbreviated
set completion-prefix-display-length 0
# max completions that don't prompt "Display all n? (y or n)"
set completion-query-items 0
# expand ~
set expand-tilde on
# only complete .files when the prefix has a leading dot
set match-hidden-files off
# show filetype char
set visible-stats on
# show comps without a bell when multiple comps
set show-all-if-ambiguous on
# show comps without a bell when no common prefix
set show-all-if-unmodified on
# ~~~~~~~~~~~~~~~~~~~~~~~ History ~~~~~~~~~~~~~~~~~~~~~~~~ #
# reset history modifications after running a command
set revert-all-at-newline on
# mark modified history lines with *
set mark-modified-lines
# infinite history
set history-size -1
# show trailing slash for directory symlinks
set mark-symlinked-directories on
# without this: |file -> Makefilefile; with this: |file -> Makefile
set skip-completed-text on
