$include /etc/inputrc

set bell-style visible
set blink-matching-paren On
# highlight common prefix
set colored-completion-prefix on
# completion colors for file types
set colored-stats on
# number of columns in completion
set completion-display-width -1
set completion-ignore-case on
# in completion: '-' == '_' 
set completion-map-case on 
# max length in chars of a common prefix that doesn't get abbreviated
set completion-prefix-display-length 100
# max completions that don't prompt "Display all n? (y or n)"
set completion-query-items 999

set expand-tilde on

set mark-symlinked-directories On
set show-all-if-ambiguous On
set show-all-if-unmodified On
set visible-stats On

# Invisible prompt divider (OSC-133;A)
set show-mode-in-prompt on
set emacs-mode-string "\1\e]133;A\e\\\2"
